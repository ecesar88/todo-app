{
  "env": {
    "browser": false,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "**/@types/**/*",
    ".eslintrc.js",
    "webpack.*.config.ts",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "jest.config.js",
    "**/index.d.ts",
    "**/node_modules/**",
    "**/*.js"
  ],
  "plugins": ["@typescript-eslint/eslint-plugin", "import", "no-restricted-imports"],
  "extends": [
    "standard-with-typescript",
    "plugin:prettier/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {}
}
